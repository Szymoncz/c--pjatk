#include <vector>
#include <iostream>

using namespace std;

int main()
{
    int k;
    int maks = 0;

    cout << "Wpisz rozmiar wektora ";
    cin >> k;

    vector <int> ve(k);

    for (int i = 0; i < k; i++)
    {
        cout << "Wpisz " << i + 1 << " element (wektora) ";
        cin >> ve[i];


        if (ve[i] > ve[maks])
        {
            maks = i;
        }
    }
    cout << "Maksymalny element wektora to " << ve[maks] << endl;
    cout << "A jego indeks to " << maks<< endl;

    return 0;
}
