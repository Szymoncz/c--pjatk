#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

struct student
{
    int index;
    string name, surname;

    bool operator<(const student& a) const
    {
        return index < a.index;
    }
};

int main() 
{
    int a;

    cout << "Wpisz liczbe studentow " << endl;
    cin >> a;
    
    vector <student> tab(a);

    for (int i = 0; i < a; i++) 
    {
        cout << endl;
        cout << "Wpisz indeks studenta " << i + 1 << ": ";
        cin >> tab[i].index;
        cout << "Wpisz imie studenta " << i + 1 << ": ";
        cin >> tab[i].name;
        cout << "Wpisz nazwisko studenta " << i + 1 << ": ";
        cin >> tab[i].surname;
    }

    cout << endl;
    cout << "Wynik nie sortowany" << endl;

    for (int i = 0; i < a; i++) {
        cout << tab[i].index << "  " << tab[i].name << "  " << tab[i].surname << endl;
    }

    sort(tab.begin(), tab.end());

    cout << endl;
    cout << "Wynik sortowany: " << endl;

    for (int i = 0; i < a; i++) {
        cout << tab[i].index << "  " << tab[i].name << "  " << tab[i].surname << endl;
    }

    return 0;
}
